<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/activity_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        tools:context="com.comcities.yalu.UI.SignUpFirstActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/img_logo"
            android:layout_width="fill_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/thime_color"
            android:orientation="vertical">

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/text001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:background="@color/thime_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/parking_screen_text"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtLanguage"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Select the Vehicle type" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/radiodGrpOne">

                    <RadioButton
                        android:id="@+id/radioBtnOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="rbclick"
                        android:text="Car" />

                    <RadioButton
                        android:id="@+id/radioBtnTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="rbclick"
                        android:text="Van" />

                    <RadioButton
                        android:id="@+id/radioBtnThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="rbclick"
                        android:text="Bike" />


                </RadioGroup>

                <LinearLayout
                    android:id="@+id/phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtUserNameSignIn"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edtUserNameSignIn"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:fontFamily="sans-serif"
                        android:padding="12dp"
                        android:text="Enter Number of Areas"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/tf_number_of_areas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edtUserNameSignIn"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:fontFamily="sans-serif"
                        android:hint="0"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:maxLength="10"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnSubmitParkingArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtRePassword"
                    android:layout_margin="20dp"
                    android:background="@color/thime_color"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:theme="@style/MyEditTextTheme" />




            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>